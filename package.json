{
	"name": "scribe",
	"description": "Scorekeeping and judging for Science Olympiad tournaments",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"debug": "node --inspect=0.0.0.0:9229 server.js",
		"lint": "./node_modules/.bin/eslint --ignore-path .gitignore .",
		"lint:fix": "./node_modules/.bin/eslint --fix --ignore-path .gitignore .",
		"start": "node server.js",
		"start:dev": "set NODE_ENV=development && yarn run start:server",
		"start:server": "nodemon server.js",
		"test:drop": "mongo scribe-dev-test --eval 'db.dropDatabase()'",
		"test:seed": "yarn test:drop && mongoimport --db scribe-dev-test --collection events --file __test__/seeds/Event.seed.json --jsonArray",
		"test": "yarn test:seed && set NODE_ENV=test && jest --runInBand",
		"test:debug": "yarn test:seed && set NODE_ENV=test && node --inspect-brk node_modules/.bin/jest --runInBand",
		"heroku-postbuild": "cd client && yarn --production=false && yarn run build"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"dependencies": {
		"bcrypt": "^2.0.1",
		"body-parser": "^1.18.2",
		"cookie-parser": "^1.4.3",
		"debug": "3.1.0",
		"dotenv": "^6.0.0",
		"express": "4.16.3",
		"express-flash": "0.0.2",
		"express-session": "^1.15.6",
		"jsonwebtoken": "^8.2.1",
		"mongoose": "^5.1.5",
		"morgan": "^1.9.0",
		"passport": "^0.4.0",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "5.0.0",
		"pug": "2.0.3",
		"random-words": "1.1.0",
		"serve-favicon": "^2.5.0"
	},
	"devDependencies": {
		"babel-eslint": "8",
		"eslint": "4.x",
		"eslint-config-airbnb": "16.1.0",
		"eslint-plugin-import": "^2.7.0",
		"eslint-plugin-jsx-a11y": "^6.0.2",
		"eslint-plugin-react": "^7.4.0",
		"jest": "^23.1.0",
		"nodemon": "^1.17.4",
		"supertest": "^3.1.0"
	},
	"nodemonConfig": {
		"ignore": [
			"client/**/*"
		],
		"delay": 10
	}
}
