{
	"name": "scribe",
	"description": "Scorekeeping and judging for Science Olympiad tournaments",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"start": "node server.js",
		"start:dev": "set NODE_ENV=development&&yarn run start-server",
		"start:server": "nodemon server.js",
		"test:drop": "mongo scribe-dev-test --eval 'db.dropDatabase()'",
		"test:seed": "yarn test:drop && mongoimport --db scribe-dev-test --collection events --file __test__/seeds/Event.seed.json --jsonArray",
		"test": "yarn test:seed && set NODE_ENV=test && set DB_TEST_URL=mongodb://localhost/scribe-dev-test && jest --forceExit --runInBand",
		"heroku-postbuild": "cd client && yarn --production=false && yarn run build"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"dependencies": {
		"bcrypt": "^2.0.1",
		"body-parser": "^1.18.2",
		"cookie-parser": "^1.4.3",
		"debug": "3.1.0",
		"express": "4.16.2",
		"express-flash": "0.0.2",
		"express-session": "^1.15.6",
		"jsonwebtoken": "^8.2.1",
		"mongoose": "^4.13.12",
		"morgan": "^1.9.0",
		"passport": "^0.4.0",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "5.0.0",
		"pug": "2.0.0-rc.4",
		"random-words": "0.0.1",
		"serve-favicon": "^2.5.0"
	},
	"devDependencies": {
		"dotenv": "^4.0.0",
		"jest": "^23.1.0",
		"nodemon": "^1.17.4",
		"supertest": "^3.1.0"
	},
	"nodemonConfig": {
		"ignore": [
			"client/**/*"
		],
		"delay": 10
	}
}
