{
  "name": "scribe",
  "description": "Scorekeeping and judging for Science Olympiad tournaments",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start-dev": "set NODE_ENV=development&&run-p start-server watch",
    "start-dev-server": "set NODE_ENV=development&&npm run start-server",
    "start-server": "nodemon ./bin/www",
    "watch": "gulp watch",
    "test": "set NODE_ENV=test&&mocha --exit"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "3.1.0",
    "express": "4.16.2",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^4.13.12",
    "mongoose-double": "0.0.1",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.5.0",
    "pug": "2.0.0-rc.4",
    "random-words": "0.0.1",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-cache": "^1.0.2",
    "gulp-clean": "^0.3.2",
    "gulp-clean-css": "^3.9.3",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-jshint": "^2.1.0",
    "gulp-livereload": "^3.8.1",
    "gulp-prettier": "^1.1.0",
    "gulp-pug-beautify": "0.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.2.0",
    "gulp-uglify": "^3.0.0",
    "jshint": "^2.9.5",
    "mocha": "^4.1.0",
    "nodemon": "^1.17.2",
    "tiny-lr": "^1.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "client/**/*"
    ],
    "delay": 10
